{
    "name": "Golden Smithing",
    "description": "You can smith golden items with gold to make them unbreakable in your hands.",
    "badges": [
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/info.png",
            "text": "Right clicking Golden Tools and Weapons with a Gold Ingot in your inventory makes them unbreakable while you are using them."
        }
    ],
    "type": "origins:item_on_item",
    "using_item_condition": {
        "type": "origins:ingredient",
        "ingredient": {
            "item": "minecraft:gold_ingot"
        }
    },
    "on_item_condition": {
        "type": "origins:and",
        "conditions": [
            {
                "type": "origins:ingredient",
                "ingredient": {
                    "tag": "efimity:piglin/golden_weapons_and_tools"
                }
            },
            {
                "type": "origins:nbt",
                "nbt": "{Piglin:{smith:1b}}",
                "inverted": true
            },
            {
                "type": "origins:nbt",
                "nbt": "{Piglin:{heirloom:{}}}",
                "inverted": true
            }
        ]
    },
    "using_item_action": {
        "type": "origins:consume",
        "amount": 1
    },
    "on_item_action": {
        "type": "origins:and",
        "actions": [
            {
                "type": "origins:modify",
                "modifier": "efimity:piglin/powers/unbreakable/mainhand"
            },
            {
                "type": "origins:modify",
                "modifier": "efimity:piglin/powers/unbreakable/offhand"
            },
            {
                "type": "origins:modify",
                "modifier": "efimity:piglin/powers/unbreakable/set_nbt"
            }
        ]
    },
    "entity_action": {
        "type": "origins:play_sound",
        "sound": "minecraft:block.smithing_table.use",
        "volume": 1.0,
        "pitch": 2.0
    }
}